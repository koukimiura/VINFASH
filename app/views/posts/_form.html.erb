<%= form_for @post do |f| %>
<div class="form">
   <div class="form-body">
      <% @post.errors.full_messages.each do |message| %>
         <div class="form-error">
           <%= message %>
         </div>
     <% end %>
      <p>タイトル</p>
         <%= f.text_field :title, class: 'form-control my-form' %><br>
      <p>投稿内容</p>
         <%= f.text_area :content, class: 'form-control my-form' %><br>
      <p><%= f.label :画像 %></p>
         <%= f.file_field :image, class: 'form-control my-form' %><br>
         <%= f.hidden_field :user_id, :value => current_user.id %><br>
         <%= f.submit "投稿する", class: 'btn btn-info' %>
   </div>
</div>
<% end %>