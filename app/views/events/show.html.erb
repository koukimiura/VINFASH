<%if @event.image? %>
<div class="post-show-item" >
    <div class="post-show-image" >
         <P class="text-center"><%= image_tag @event. image.to_s %></P>
    </div>
<hr>
<div class="post-show-item1">
    <p class="post-title text-center"><%=@event.title %></p>
        <div class= "post-show-content">
            <p class= text-center ><%= @event.content %></p>
<hr>
        <div class="post-time">
            <%=@event.created_at %>
        </div>
        </div>
    </div>
</div>
<% else%>
<div class="post-show-item" >
    
<div class="post-show-item2">
    <p class="post-title2"><%=@event.title %></p>
    <p class="post-title2"><%=@event.location %></p>
        <div class= "post-show-content2">
            <%= @event.content %>
<hr>
        <div class="post-time">
            <%= @eventt.created_at %>
        </div>
        <%if @like.user_id.present? && @like.event_id.present? %>
        <%= link_to like_path(@like.id), method: :delete %>
        <span class='fa fa-heart like-btn-unlike'></span>
        <% else %>
        <%= link_to likes_path(@like.id), method: :post %>
        <span class='fa fa-heart like-btn'></span>
        <% end %>
        <%= @like_count %>
        </div>
    </div>
</div>
<% end %>


<p><%= link_to '編集する', edit_post_path(@event.id), class:'btn btn-info' %></p>
<p><%= link_to '削除', post_path(@event.id), method: :delete, class:'btn btn-warning', date: {confirm: 'Sure?'} %></p>