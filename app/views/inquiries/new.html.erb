<h2 class= "text-center">お問い合わせ</h2>
<hr>

<%= form_for @inquiry do |f| %>
    <div class= "inquiry">
        <% @inquiry.errors.full_messages.each do |message| %>
            <div class="form-error">
            <%= message %>
            </div>
        <% end %>
        <div class="inquiry-form">
            <div class="iquiry-name">
                <p><%= f.label :お名前 %></p>
                <%= f.text_field :name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="iquiry-eamil">
                <p><%= f.label :メールアドレス %></p>
                <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="iquiry-content">
                <p><%= f.label :お問い合わせ内容 %></p>
                <%= f.text_area :content, class:"form-control iquiry-content2 " %>
            </div>
            <div class="iquiry-action">
                <%= f.submit :"送信", class:"btn btn-info form-control" %>
            </div>
        </div>
    </div>
<% end %>