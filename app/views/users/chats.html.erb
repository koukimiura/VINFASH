<div class="row">
        <div class="col-xs-6">
            
    <div class="users-show">
        <%= image_tag @user.image.to_s, class: "users-image" %>
    </div>
    <h2><%= link_to @user.name, user_path(@user) %></h2>
    <!--フォローの数とフォロワー -->
    <div class="text-left">
    <%= link_to  following_user_path(@user) do %>
    <i class="fas fa-flag"></i>
    <% end %>
    <%= @friend_following %>
    <%= link_to followers_user_path(@user) do %>
    <i class="far fa-flag"></i>
    <% end %>
    <%= @friend_followers %>
    </div>
    <!--users_detail -->
    <p><%= @user.email %></p>
    <p><%= @user.gender %> : 誕生日<%= @user.birthday %></p>
    <p>主な服のサイズ: <%= @user.my_size %></p>
    <p>主な服のサイズ: <%= @user.my_shoes_size %></p>
    <p>身長: <%= @user.my_height %></p>
    <p>好きな洋服ジャンル: <%= @user.genre %></p>
    <p>よく買い物に行く都道府県エリア: </p>
    <p>よく買い物に行くエリア: </p>
    <p>月に洋服にかける金額: <%= @user.my_price %></p>
    <% if @area.present? %>
     <p>よく買い物に行くエリア:<%= @area.name %><p>
    <% else %>
     <p>未記入</p>
    <% end %>
 <div class="user-show-btn" >
  <% if @user.id == current_user.id %>
<%= link_to "編集する", edit_user_registration_path(@user.id), class: "btn btn-warning" %>
<%= link_to "削除する", edit_user_registration_path(@user.id), class: "btn btn-warning" %>
  <% else %>
<%= form_for @chat do |f| %>
<%= fields_for @entry do |e| %>
<%= e.hidden_field :user_id, :value => @user.id %>
<%= e.hidden_field :name, :value => @user.id %>
<% end %>
<%= f.submit "チャットする", class: "btn btn-primary" %>
<% end %>
  <% end %>
 </div>
 <br>
 <div class="content-box">
 <%= @user.self_introduction %>
 </div>
</div>



<div class="col-xs-6">
    
<ul class="user-tabs" >
    <li><%= link_to "投稿", user_path(@user.id) %></li>
    <li><%= link_to "いいね", likes_user_path(@user.id) %></li>
    <li><%= link_to "イベントにいいね", likes_events_user_path(@user.id) %></li>
    <li><%= link_to "イベント投稿", events_user_path(@user.id) %></li>
<% if current_user.id == @user.id %>
    <li class="active"><%= link_to "最近のチャット", chats_user_path(@user.id) %></li>
<% else %>
<%= form_for @chat do |f| %>
<%= fields_for @entry do |e| %>
<%= e.hidden_field :user_id, :value => @user.id %>
<%= e.hidden_field :name, :value => @user.id %>
<% end %>
<li class="active"><%= f.submit "チャットする", class: "btn btn-primary" %></li>
<% end %>
<% end %>
</ul>


<% @anotherEntries.each do |entry| %>
<div class="url-chat">
    <%= link_to chat_path(entry.chat_id) do %>
        <div class="chat-index ">
            <div class="chat-left">
               <%= image_tag entry.user.image.to_s, size: "50x50" %> 
            </div>
            <div class="chat-right text-left">
                <p><strong><%= entry.user.name %></strong></p>
               
                            
                            <% a= Talk.where(entry_id: @talks) %>
                            <% a.each do |b| %> 
                                <p><%= b.content %></p>
                            <% end %>
            </div>
        </div>
    <% end %>
</div>
<% end %> 
</div>
</div> 
