<div class= "row">
  <div class="col-xs-4">
        <h3>最近のチャット</h3>
        <hr>
<% @anotherEntries.each do |an| %>
<% if an.chat_id == @chat.id %>
    <div>
       <div class="f-1">
           <div class="following-user">
               <div class="f-2">
                   <div class="f-icon">
                       <% if an.user.image? %>
                           <div class="f-image">
                             <%= image_tag an.user.image.to_s, class: "following-image" %>
                           </div>
                      <% else %>
                          <div class="f-image">
                              <%= image_tag "default.png", class: "following-image" %>
                          </div>
                      <% end %>
                   </div>
                   <div class="f-detail">
                       <div class="f-3">
                           <div class="more-detail">
                               <strong><%= link_to an.user.name, user_path(an.user.id) %></strong>
                               <br>
                           </div>
                           <div class="f-btn">
                               <div class="f-btn2">
                               </div>
                           </div>
                       </div>
                       <div class="f-content">
                           <!--message -->
                      </div>
                   </div>
               </div>
           </div>
       </div>
    </div>
<% else %>
    <div>
       <div class="f-1">
           <%= link_to chat_path(an.chat_id) do %>
               <div class="following-user">
                   <div class="f-2">
                       <div class="f-icon">
                           <% if an.user.image? %>
                               <div class="f-image">
                                 <%= image_tag an.user.image.to_s, class: "following-image" %>
                               </div>
                          <% else %>
                              <div class="f-image">
                                  <%= image_tag "default.png", class: "following-image" %>
                              </div>
                          <% end %>
                       </div>
                       <div class="f-detail">
                           <div class="f-3">
                               <div class="more-detail">
                                   <strong><%= an.user.name %></strong>
                                   <br>
                               </div>
                               <div class="f-btn">
                                   <div class="f-btn2">
                                   </div>
                               </div>
                           </div>
                           <div class="f-content">
                               <!--message -->
                                   <% @entries.each do |e| %>
                                       <% if an.chat_id == e.chat_id %>
                                           <% talks = Talk.where(entry_id: e.id).order(created_at: :desc).limit(1) %>
                                               <% talks.each do |talk| %>
                                                   <%= talk.content %>
                                           <% end %>
                                      <% end %>
                                 <% end %>
                          </div>
                       </div>
                   </div>
               </div>
           <% end %>
       </div>
    </div>
<% end %>
<% end %> 
</div>
     
    <div class="col-xs-8">
        <% @anotherEntries.each do |an|  %>
            <% if an.chat_id == @chat.id %>
                <h2 class="text-center"><%= link_to an.user.name, user_path(an.user_id) %>
                    <%= link_to chat_path(an.chat_id), method: :delete, date: {confirm: "本当に投稿を削除しますか？"} do %>
                        <span class="fas fa-trash fa-lg"></span>
                   <% end %>
                </h2>
            <% end %>
        <% end %>
<hr>

        <% if @talks.present? %>
            <% @talks.each do |talk| %>
                 <% if talk.user_id == current_user.id %>
                    <h4 class="text-right">
                        <p class="alert alert-success">
                            <% if talk.user_id == current_user.id %>
                                <%= link_to talk.content, talk_path(talk.id), method: :delete, 
                                date: {confirm: "本当に投稿を削除しますか？"}%>
                            <% else %>
                                <%= talk.content %>
                            <% end %>
                            <br><br>
                                <% if talk.user.image? %>
                                    <%= image_tag talk.user.image.to_s, size: "50x50" %>
                                <% else %>
                                    <%= image_tag "default.png", size: "50x50" %>
                                <% end %>
                            <small><strong> <%= link_to talk.user.name, user_path(talk.user_id) %></strong></small>
                        </p>
                    </h4>
                <% else %>
                     <h4 class="text-left">
                        <p class="alert alert-info">
                            <% if talk.user_id == current_user.id %>
                                <%= link_to talk.content, talk_path(talk.id), method: :delete,
                                   date: {confirm: "本当に投稿を削除しますか？"}%>
                            <% else %>
                                <%= talk.content %>
                            <% end %>
                            <br><br>
                                <% if talk.user.image? %>
                                    <%= image_tag talk.user.image.to_s, size: "50x50" %>
                                <% else %>
                                    <%= image_tag "default.png", size: "50x50" %>
                                <% end %>
                            <small><strong> <%= link_to talk.user.name, user_path(talk.user.id) %></strong></small>
                        </p>
                    </h4>
                <% end %>
            <% end %>
        <% else %>
            <br>
            <h4>メッセージはありません</h4>
            <br>
        <% end %>

        <%= form_for @talk do |f| %>
        <p><%= f.text_area :content, class: 'form-control', placeholder: 'メッセージを入力してください' %></p>
            <%= f.hidden_field :entry_id, :value => @entry.id %>
        <p><%= f.submit "送信", class: 'btn btn-info' %></p>
        <% end %> 
     </div>
</div>